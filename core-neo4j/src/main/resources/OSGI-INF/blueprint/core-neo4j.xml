<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:bp="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0"
           default-activation="lazy">
           
	<bean id="graphDBConfig" class="org.escapek.ekcmdb.core.neo4j.GraphDBConfigurationService">
		<property name="context" ref="blueprintBundleContext" />
	</bean>
	<service id="graphDBConfigService" ref="graphDBConfig"
		interface="org.osgi.service.cm.ManagedService">
		<service-properties>
			<entry key="service.pid" value="org.escapek.ekcmdb.core.neo4j" />
		</service-properties>
	</service>
</blueprint>